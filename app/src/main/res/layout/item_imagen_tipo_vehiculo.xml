<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".ui.main.activity.MainActivity"
    android:theme="@style/Theme.OyeeTaxi"
    android:padding="3dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/llTipoVehiculo"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="@color/white"
        >

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/imageVehiculo"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:src="@drawable/ic_front_vehicle"
            app:civ_border_color="@color/yellow_primary"
            app:civ_border_width="1dp"
            app:civ_shadow="true"
            app:civ_shadow_color="@color/yellow_primary"
            app:civ_shadow_radius="0dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_front_vehicle" />

        <TextView
            android:id="@+id/tvTipoVehiculo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de VehÃ­culo"
            android:textColor="@color/colorPrimary"
            android:textSize="11sp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageVehiculo" />




    </androidx.constraintlayout.widget.ConstraintLayout>






</androidx.appcompat.widget.LinearLayoutCompat>



