<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="0dp"
    tools:context=".ui.controlPanel.activity.UserControlPanelActivity"
    android:theme="@style/Theme.OyeeTaxi"
    android:padding="8dp"
    >


    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/clVehiculoActivo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/casiBlanco"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="8dp"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/imageVehiculoClimatizado"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/casiBlanco"
            android:textSize="13sp"
            app:icon="@drawable/ic_air"
            app:iconTint="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageVehiculo"

            />


        <com.mikhaellopez.circularimageview.CircularImageView

            android:id="@+id/imageVehiculo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:src="@drawable/ic_front_vehicle"
            app:civ_border_color="@color/yellow_primary"
            app:civ_border_width="2dp"
            app:civ_shadow="true"
            app:civ_shadow_color="@color/yellow_primary"
            app:civ_shadow_radius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_front_vehicle" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageVehiculoVerificado"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="2dp"
            android:src="@drawable/ic_verified"
            android:tint="@color/colorSnackBarSuccess"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageViewSelect2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageVehiculo"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_image_select" />


        <androidx.constraintlayout.widget.ConstraintLayout

            android:id="@+id/constraintLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/tvMatricula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxLines="1"
                android:text="Matrícula"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tvDetalles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="4"
                android:maxLines="5"
                android:text="Tipo de Vehiculo\nMarca Modelo Año\nCapacidad Pasajeros"
                app:layout_constraintStart_toStartOf="@+id/tvMatricula"
                app:layout_constraintTop_toBottomOf="@+id/tvMatricula" />


            <TextView
                android:id="@+id/tvCarga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:maxLines="2"
                android:text="Pasajeros\nEquipaje"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/tvDetalles"
                app:layout_constraintTop_toBottomOf="@+id/tvDetalles" />


        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="visible"
        android:id="@+id/clVehiculoOpciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/casiBlanco"
        app:layout_constraintTop_toBottomOf="@+id/clVehiculoActivo"
        tools:layout_editor_absoluteX="8dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/clVehicleInnerPanel0"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            >
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonVehiculoActivo"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:drawableTop="@drawable/ic_vehicle_active_32"
                android:drawableTint="@color/black"
                android:lines="2"
                android:maxLines="3"
                android:text="@string/boton_vehiculo_activo_true"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="normal" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonEditarVehiculo"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:drawableTop="@drawable/ic_car_edit_32"
                android:drawableTint="@color/black"
                android:lines="2"
                android:maxLines="3"
                android:text="Editar \nVehículo"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="normal" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonVehiculoVerificacion"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:drawableTop="@drawable/ic_verified_32"
                android:drawableTint="@color/black"
                android:lines="2"
                android:maxLines="3"
                android:text="Verificación\n "
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="normal" />


        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>



