<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/user_control_panel_fragment_main"
    tools:context=".ui.controlPanel.activity.UserControlPanelActivity"
    android:padding="8dp"
>

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="     "
        android:textAlignment="textStart"
        android:textColor="@color/red"
        android:textSize="2sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clUserInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:background="@color/casiBlanco"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/tvTitulo">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clUserImageView"
            android:layout_width="128dp"
            android:layout_height="128dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_user">


            <com.mikhaellopez.circularimageview.CircularImageView

                android:id="@+id/imagePerfil"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_user"
                app:civ_border_color="@color/yellow_primary"
                app:civ_border_width="2dp"
                app:civ_shadow="true"
                app:civ_shadow_color="@color/yellow_primary"
                app:civ_shadow_radius="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_user" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageUsuarioVerificado"

                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="2dp"
                android:src="@drawable/ic_verified"
                android:tint="@color/colorSnackBarSuccess"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/imageViewSelect"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintBottom_toBottomOf="@+id/imagePerfil"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_image_select" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clUserinfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/clUserImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvNombreUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Nombre Completo y Apellidos"
                android:textAlignment="textStart"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold|italic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTelefonoMovil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Teléfono Móvil"
                android:lines="1"
                android:textAlignment="textStart"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvNombreUsuario" />


            <TextView
                android:id="@+id/tvTipoUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Tipo de Usuario"
                android:text=""
                android:textAlignment="textStart"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTelefonoMovil" />

            <TextView
                android:id="@+id/tvCondutorOPasajero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Conductor o Pasajero"
                android:text=""
                android:textAlignment="textStart"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="@+id/tvTipoUsuario"
                app:layout_constraintTop_toBottomOf="@+id/tvTipoUsuario" />

            <TextView
                android:id="@+id/tvEdad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Edad"
                android:lines="1"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvCondutorOPasajero" />

            <TextView
                android:id="@+id/tvAntiguedad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Antiguedad"
                android:lines="1"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvEdad" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clUserInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/clUserInfo"
        tools:layout_editor_absoluteX="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clUserPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/clUserImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/clUserInnerPanel1"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:weightSum="3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                >

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonEditarPerfil"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/casiBlanco"
                    android:drawableTop="@drawable/ic_edit_person_32"
                    android:drawableTint="@color/black"
                    android:lines="2"
                    android:maxLines="3"
                    android:text="Editar \nMi Perfil"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:textStyle="normal"

                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonProvincia"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/casiBlanco"
                    android:drawableTop="@drawable/ic_location_32"
                    android:drawableTint="@color/black"
                    android:lines="2"
                    android:maxLines="3"
                    android:text="Provincia\n "
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:textStyle="normal" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonUsuarioVerificacion"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/casiBlanco"
                    android:drawableTop="@drawable/ic_verified_32"
                    android:drawableTint="@color/black"
                    android:lines="2"
                    android:maxLines="3"
                    android:text="Verificación\n "
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:textStyle="normal" />


            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/clUserInnerPanel2"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:weightSum="3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/clUserInnerPanel1">


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonSeguridad"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/casiBlanco"
                    android:drawableTop="@drawable/ic_security_32"
                    android:drawableTint="@color/black"
                    android:lines="2"
                    android:maxLines="3"
                    android:text="Seguridad \ny Privacidad"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:textStyle="normal"

                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonComunidad"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/casiBlanco"
                    android:drawableTop="@drawable/ic_comunity_32"
                    android:drawableTint="@color/black"
                    android:lines="2"
                    android:maxLines="3"
                    android:text="Comunidad\ny Contactos"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:textStyle="normal" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonC"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/casiBlanco"
                    android:drawableTop="@drawable/ic_card_32"
                    android:drawableTint="@color/black"
                    android:lines="2"
                    android:maxLines="3"
                    android:text="Métodos\nde Pago"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:textStyle="normal" />


            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/clUserInnerPanel3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/clUserInnerPanel2">


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonSolicitarModoCondutor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/casiBlanco"
                    android:drawableLeft="@drawable/ic_transportation_32"
                    android:drawableTint="@color/black"
                    android:lines="2"
                    android:maxLines="2"
                    android:text="Registra tu vehiculo y gana dinero con Oyee Taxi\nAplica para condutor justo aqui"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"
                    android:textSize="11sp"

                    android:textStyle="normal"

                    />


            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clDriverPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/clUserImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RadioGroup
                android:id="@+id/clVehicleInnerPanel0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/casiBlanco"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="7"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <TextView

                    android:id="@+id/tvSelectMode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:text="Modo:"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <RadioButton
                    android:id="@+id/buttonModoConductor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="3"
                    android:background="@drawable/drawable_gender_tab_selector"
                    android:button="@null"
                    android:checked="true"
                    android:drawableLeft="@drawable/ic_taxi"
                    android:drawableTint="@color/black"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="CONDUCTOR"
                    android:textAllCaps="false"
                    android:textColor="@drawable/drawable_gender_tab_text_color_selector"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <RadioButton
                    android:id="@+id/buttonModoPasajero"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="3"
                    android:background="@drawable/drawable_gender_tab_selector"
                    android:button="@null"
                    android:checked="false"
                    android:drawableLeft="@drawable/ic_person_32"
                    android:drawableTint="@color/black"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="PASAJERO"
                    android:textAllCaps="false"
                    android:textColor="@drawable/drawable_gender_tab_text_color_selector"
                    android:textSize="12sp"
                    android:textStyle="normal" />


            </RadioGroup>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/clVehicleInnerPanel1"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:weightSum="3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toBottomOf="@+id/clVehicleInnerPanel0">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonEditarVehiculo"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/casiBlanco"
                    android:drawableTop="@drawable/ic_car_edit_32"
                    android:drawableTint="@color/black"
                    android:lines="2"
                    android:maxLines="3"
                    android:text="Editar \nVehículo"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:textStyle="normal"

                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonAdministrarVehiculos"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/casiBlanco"
                    android:drawableTop="@drawable/ic__list_32"
                    android:drawableTint="@color/black"
                    android:lines="2"
                    android:maxLines="3"
                    android:text="Administrar\nmis Vehículos"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:textStyle="normal" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonV3"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/casiBlanco"
                    android:drawableTop="@drawable/ic_money_32"
                    android:drawableTint="@color/black"
                    android:lines="2"
                    android:maxLines="3"
                    android:text="Gestión\nde Pago"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:textStyle="normal" />


            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clVehiculoActivo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/casiBlanco"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/clVehicleInnerPanel1"


                >

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/imageVehiculoClimatizado"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="@color/casiBlanco"
                    android:textSize="13sp"
                    app:icon="@drawable/ic_air"
                    app:iconTint="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/imageVehiculo"

                    />


                <com.mikhaellopez.circularimageview.CircularImageView

                    android:id="@+id/imageVehiculo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_front_vehicle"
                    app:civ_border_color="@color/yellow_primary"
                    app:civ_border_width="2dp"
                    app:civ_shadow="true"
                    app:civ_shadow_color="@color/yellow_primary"
                    app:civ_shadow_radius="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_front_vehicle" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imageVehiculoVerificado"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="2dp"
                    android:src="@drawable/ic_verified"
                    android:tint="@color/colorSnackBarSuccess"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/imageViewSelect2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintBottom_toBottomOf="@+id/imageVehiculo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:srcCompat="@drawable/ic_image_select" />


                <androidx.constraintlayout.widget.ConstraintLayout

                    android:id="@+id/constraintLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"

                    app:layout_constraintTop_toTopOf="parent">


                    <TextView
                        android:id="@+id/tvMatricula"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:maxLines="1"
                        android:text="Matrícula"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/tvDetalles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="4"
                        android:maxLines="5"
                        android:text="Tipo de Vehiculo\nMarca Modelo Año\nCapacidad Pasajeros"
                        app:layout_constraintStart_toStartOf="@+id/tvMatricula"
                        app:layout_constraintTop_toBottomOf="@+id/tvMatricula" />


                    <TextView
                        android:id="@+id/tvCarga"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="2"
                        android:maxLines="2"
                        android:text="Pasajeros\nEquipaje"
                        android:visibility="gone"
                        app:layout_constraintStart_toStartOf="@+id/tvDetalles"
                        app:layout_constraintTop_toBottomOf="@+id/tvDetalles" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>


    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>